" packadd! dracula

" Syntax highlighting and colorscheme
syntax on
" colorscheme dracula

" Proper encoding
set encoding=utf-8

" Line numbering
set nu
set relativenumber
set numberwidth=3

" Highlighting
set hlsearch

" Highlighting
set hlsearch

" Indentation
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
